{
    "Logging": {
        "LogLevel": {
            "Default": "Information"
        },
        "NLog": {
            "IncludeScopes": true
        }
    },
    "NLog": {
        "extensions": [
            {
                "assembly": "NLog.Extensions.Logging"
            }
        ],
        "throwConfigExceptions": true,
        "targets": {
            "async": true,
            "file": {
                "type": "File",
                "fileName": "${basedir}logs/sounddeck.log",
                "encoding": "utf-8",
                "layout": "${longdate} [${uppercase:${level}}] ${logger}: ${message} ${exception:format=tostring}",
                "archiveAboveSize": "5242880",
                "archiveFileName": "${basedir}logs/archive/sounddeck.{#}.log",
                "archiveNumbering": "DateAndSequence",
                "archiveDateFormat": "yyyyMMdd",
                "maxArchiveFiles": 5
            }
        },
        "rules": [
            {
                "logger": "*",
                "writeTo": "file"
            }
        ]
    }
}
