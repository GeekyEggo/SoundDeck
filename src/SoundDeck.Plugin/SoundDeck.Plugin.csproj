          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Images\PlayAudio\Key.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Images\RecordAudio\Action%402.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Images\RecordAudio\Action.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Images\RecordAudio\Key0%402.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Images\RecordAudio\Key0.png">
