        <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="3.0.0-preview5.19227.9" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\..\SharpDeck\src\SharpDeck\SharpDeck.csproj" />
        <ProjectReference Include="..\SoundDeck.Core\SoundDeck.Core.csproj" />
    </ItemGroup>
    <ItemGroup>
        <None Update="Images\CaptureAudioBuffer@2.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Images\ClipAudio\Action.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Images\ClipAudio\Key@2.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Images\ClipAudio\Key.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Images\PlayAudio\Action%402.png">
